<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AkunActivity">

    <TextView
        android:id="@+id/txt_myProfile"
        android:text="My Profile"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_marginTop="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:background="@android:color/holo_blue_dark"
        android:paddingHorizontal="10dp"
        android:paddingBottom="10dp"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="2"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="2"
                android:text="FOTO PROFIL"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/img_myProfile"
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="NAMA"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_myProfileNama"
                android:text="Hanif Aga"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="JENIS KELAMIN"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_myProfileJenisKelamin"
                android:text="Laki-laki"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@android:color/holo_blue_dark"
        android:padding="10dp"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="2"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="SALDO"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_myProfileBalance"
                android:text="@string/balance"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="PEMAKAIAN"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_myProfileUsage"
                android:text="@string/usage"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_callCenter"
        android:text="call center"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:gravity=""
        android:layout_gravity="center"
        android:paddingHorizontal="20dp"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_changeLanguage"
        android:text="change language"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:gravity=""
        android:layout_gravity="center"
        android:paddingHorizontal="20dp"
        android:layout_marginHorizontal="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
