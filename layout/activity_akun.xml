<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/holo_blue_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AkunActivity">

    <TextView
        android:id="@+id/txt_myProfile"
        android:text="My Profile"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:background="@android:color/white"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_marginTop="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:background="@android:color/white"
        android:paddingHorizontal="10dp"
        android:paddingBottom="10dp"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="2"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="2"
                android:text="PROFILE PHOTO"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/img_myProfile"
                android:src="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="NICKNAME"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_myProfileNickName"
                android:textColor="@android:color/black"
                android:text="Hanif Aga"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="GENDER"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_myProfileGender"
                android:textColor="@android:color/black"
                android:text="Laki-laki"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="10dp"
        android:layout_marginHorizontal="21dp"
        android:layout_marginTop="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="2"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="SALDO"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_myProfileBalance"
                android:text="@string/balance"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:weightSum="2">

            <TextView
                android:text="PEMAKAIAN"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_myProfileUsage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/usage"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_callCenter"
                android:text="call center"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:gravity=""
                android:layout_gravity="center"
                android:paddingHorizontal="20dp"
                android:layout_marginHorizontal="21dp"
                android:layout_marginTop="21dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_changeLanguage"
                android:text="change language"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:gravity=""
                android:layout_gravity="center"
                android:paddingHorizontal="20dp"
                android:layout_marginHorizontal="21dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_privacyPolicy"
                android:text="privacy policy"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:gravity=""
                android:layout_gravity="center"
                android:paddingHorizontal="20dp"
                android:layout_marginHorizontal="21dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_logOut"
            android:text="log out"
            android:textColor="@android:color/holo_red_dark"
            android:background="@android:color/white"
            android:paddingHorizontal="20dp"
            android:layout_marginHorizontal="21dp"
            android:layout_marginBottom="21dp"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </RelativeLayout>
</LinearLayout>